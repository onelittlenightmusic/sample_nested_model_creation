<%- model_class = Brotherhood -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:parent_id) %>:</strong></dt>
  <dd><%= @brotherhood.parent_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:parent2_id) %>:</strong></dt>
  <dd><%= @brotherhood.parent2_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              brotherhoods_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_brotherhood_path(@brotherhood), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              brotherhood_path(@brotherhood),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
